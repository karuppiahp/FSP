<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/listRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/bluebg" >

            <TextView
                android:id="@+id/textheader"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="DRINKS SPECIALS"
                android:textColor="@color/white"
                android:textScaleX="1.2"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/rel1"
            android:background="@color/white" >

            <RelativeLayout
                android:id="@+id/dateListRelative"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/lightbluecolor" >

                <TextView
                    android:id="@+id/dateheader"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="DRINKS SPECIAL"
                    android:textColor="@color/textdatecolor"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/downarrow"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/dateheader"
                    android:background="@drawable/drinksdown" />
            </RelativeLayout>

            <View
                android:id="@+id/viewrel"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/dateListRelative"
                android:background="@drawable/dividerbarlist" />

            <ListView
                android:id="@+id/bars_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/viewrel"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:divider="@null"
                android:dividerHeight="10dp"
                android:fadeScrollbars="false"
                android:fadingEdge="none"
                android:scrollbarStyle="outsideInset"
                android:scrollingCache="false" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000" >

        <TextView
            android:id="@+id/alertcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_sec_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/alertview"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <ListView
                android:id="@+id/bars_school_details"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"                
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:scrollbars="none"
                android:listSelector="@color/selectedbgcolor"
                android:scrollingCache="false" />
        </LinearLayout>
    </RelativeLayout>

