<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listHistoryRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageForArrow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/list_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:orientation="vertical" >
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/textForVendorHistoryName"
            android:text="Stella Artis."
            android:textColor="@color/app_orange"
            android:textSize="18dp" />

        <TextView
           android:id="@+id/textForNameStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Delivery"
            android:textColor="@color/app_green"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ordernotext"
            android:layout_width="120dp"            
            android:layout_height="wrap_content"
            android:text="Order No."
            android:textColor="@color/txt_color_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textForVendorHistoryOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Stella Artis"
            android:textColor="@color/app_green"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
             android:id="@+id/timeintext"
           android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Time in:"
            android:textColor="@color/txt_color_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textForVendorHistoryTimeIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLines="2"
         
            android:textColor="@color/app_green"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
      	android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/addresstext"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/txt_color_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textForVendorHistoryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"            
            android:maxLines="3"           
            android:textColor="@color/txt_color_gray"
            android:textSize="14dp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
      	android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/phonetext"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@color/txt_color_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textForPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"            
            android:textColor="@color/txt_color_gray"
            android:textSize="14dp" />
    </LinearLayout>    

    <LinearLayout
        android:id="@+id/layoutForDriverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
             android:id="@+id/drivertext"
           android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Driver:"
            android:textColor="@color/txt_color_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textForVendorHistoryDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="John l"
            android:textColor="@color/app_green"
            android:textSize="14dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutForClosedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
             android:id="@+id/closedtext"
           android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Closed:	"
            android:textColor="@color/txt_color_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textForVendorHistoryClosedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="6:10 pm"
            android:textColor="@color/app_green"
            android:textSize="18dp" />
    </LinearLayout>
 </LinearLayout>
</RelativeLayout>