<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/todoListItemMargin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/transaction_manage_item_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/todoListItemMargin"
        android:textColor="@color/pointsBg"
        android:focusable="false"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/transaction_manage_item_type"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/pointsBg"
        android:focusable="false"
        android:clickable="false"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/transaction_manage_item_description"
        android:focusable="false"
        android:clickable="false"
        android:layout_below="@+id/transaction_manage_item_date"
        android:textColor="@color/recentTransactionsDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxEms="12"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/transaction_manage_item_amount"
        android:textColor="@color/recentTransactionsDate"
        android:focusable="false"
        android:clickable="false"
        android:visibility="visible"
        android:layout_below="@+id/transaction_manage_item_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/transaction_manage_item_id"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/transaction_manage_item_date"
        android:layout_toEndOf="@+id/transaction_manage_item_date"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/transaction_manage_item_subCathegory"
        android:layout_below="@+id/transaction_manage_item_date"
        android:layout_toEndOf="@+id/transaction_manage_item_description"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/transaction_manage_item_datePosted"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/transaction_manage_item_id"
        android:visibility="gone" />
</RelativeLayout>