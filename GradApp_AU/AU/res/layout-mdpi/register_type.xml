<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    >
    
    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        layout="@layout/header"
        />
    
    <ImageView
        android:id="@+id/iamgeForLogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_below="@+id/header"
        android:contentDescription="@string/contentdesc"
        android:src="@drawable/register_screen_icon" />
    
    <RelativeLayout
        android:id="@+id/registerTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/iamgeForLogo"
        android:layout_marginTop="20dp"
        >
        <FrameLayout
            android:id="@+id/layoutForRegisterType"
            android:layout_width="fill_parent"
            android:layout_height="40dp" >

            <Spinner
                android:id="@+id/spinnerForRegisterType"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical"
                android:prompt="@string/guestGraduate"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/down_arrow"
                android:contentDescription="@string/contentdesc" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/layoutForPickSchool"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/layoutForRegisterType"
            android:layout_marginTop="30dp" >

            <Spinner
                android:id="@+id/spinnerForPickSchool"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical"
                android:prompt="@string/pickSchool"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/down_arrow"
                android:contentDescription="@string/contentdesc" />
        </FrameLayout>
    </RelativeLayout>
    
    <ImageButton
        android:id="@+id/imgBtnForSave"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/save_white"
        android:layout_below="@+id/registerTypeLayout"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/contentdesc"
        />
    
</RelativeLayout>
