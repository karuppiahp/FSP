<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/promo_layout_bg" >

    <com.eliqxir.utils.CustomTextOpensansSemiBold
        android:id="@+id/promo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="@string/promo_title"
        android:textColor="@color/app_orange"
        android:textSize="16sp" />

    <Button
        android:id="@+id/promo_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/attachment_close" />

    <EditText
        android:id="@+id/promo_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/promo_close"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_layout_bg"
        android:ems="10"
        android:hint="@string/promo_code"
        android:paddingLeft="25dp" />

    <Button
        android:id="@+id/promo_apply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/promo_code"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/app_orange"
        android:text="@string/apply"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <com.eliqxir.utils.CustomTextOpensansSemiBold
        android:id="@+id/promo_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/success"
        android:textColor="@color/app_green"
        android:textSize="26sp"
        android:textStyle="bold" />

    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/promo_percentage_off"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="110dp"
        android:text="@string/sample_percentage"
        android:textColor="@color/txt_color_gray"
        android:textSize="18sp" />

</RelativeLayout>