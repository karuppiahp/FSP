<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/overviewList">
    
    <RelativeLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        >
        
        <com.eliqxir.utils.CustomTextOpensansSemiBold
            android:id="@+id/textForSellingItemNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/app_green"
            android:textSize="22dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            />
        
        <LinearLayout
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="22dp"
            android:orientation="vertical"
            >
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForSellingItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stella Artois"
                android:textColor="@color/grey"
                android:textSize="16dp"
                />
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForSellingItemDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stella Artois"
                android:textColor="@color/vendor_overview_desc"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
		        android:maxLines="2"
		        android:ellipsize="end"
                />
        </LinearLayout>
        
        <ImageView
	        android:id="@+id/imageForArrow"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/list_arrow"
	        />
    </RelativeLayout>

</RelativeLayout>