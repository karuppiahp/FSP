<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/layForCustomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/imageForSheduleClock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/contentdesc"
            android:src="@drawable/search_clock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/imageForSheduleClock"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textForScheduleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textForScheduleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/eventStartTime"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageForSearchSheduleAdd"
            android:layout_width="25dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:contentDescription="@string/contentdesc"
            android:src="@drawable/add_icon_search" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myScheduleView" />

</LinearLayout>