<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/deals_white_bar" >

        <TextView
            android:text="@string/yourewards"
            android:id="@+id/yourrewardprogress"
            style="@style/TextviewTheme"
            android:layout_marginTop="10dp">
        </TextView>
        <TextView
            android:layout_below="@+id/yourrewardprogress"
            android:id="@+id/yourrewardsDesc"
            android:text="@string/yourrewardsDesc"
            style="@style/TextviewTheme"
            />
        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/foodRatingBar"
            android:numStars="5"
            android:stepSize="1.0"
            android:isIndicator="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/yourrewardsDesc"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/termsBtn"
            android:layout_centerVertical="true"
            style="@style/NextArrowTheme"/>
    </RelativeLayout>

</LinearLayout>