<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color" >

    <!-- Replace this with header -->

    <include
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        layout="@layout/header" />

    <!-- Main Layout below the header -->

    <ImageView
        android:id="@+id/img_order_placed"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/header"
        android:layout_margin="20dp"
        android:src="@drawable/order_placed" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img_order_placed"
        android:layout_marginTop="5dp"
        android:background="@color/line_color" />

    <ScrollView
        android:id="@+id/scroll_lay_address"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/line1"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/address_lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/order_from_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORDER FROM:"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_from_label"
                    android:layout_marginTop="5dp"
                    android:text="Capital City Package"
                    android:textColor="@color/app_orange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="5dp"
                    android:text="2326 Wabash Ave."
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address1"
                    android:text="Chicago, IL 60540"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/order_no_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address2"
                    android:layout_marginTop="5dp"
                    android:text="ORDER No.  "
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_no_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/order_no_label"
                    android:layout_below="@+id/address2"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/order_no_label"
                    android:text="0006302809289"
                    android:textColor="@color/app_green"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/today_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_lay1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/today_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIME :"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/today_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/today_label2"
                    android:paddingLeft="4dp"
                    android:text="TODAY"
                    android:textColor="@color/app_orange"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/to_address_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/today_layout"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/order_to_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORDER TO:"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/to_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_to_label"
                    android:layout_marginTop="5dp"
                    android:text="Rj Kollar"
                    android:textColor="@color/app_orange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/to_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/to_name"
                    android:layout_marginTop="5dp"
                    android:text="28 Collier Rd. NW"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/to_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/to_address1"
                    android:text="Unit 11"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/to_address3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/to_address2"
                    android:text="Atlanta, GA 30309"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/to_address_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/share_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share your order on:"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/share_label"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/share_label"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/facebook"
                    android:scaleType="fitXY"
                    android:src="@drawable/twitter" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/share_layout" />
        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/close_layout"
        android:layout_marginTop="10dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/close_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#f0f1f1ec" >

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_orange"
            android:text="Close"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>