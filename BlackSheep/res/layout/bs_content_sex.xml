<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="80dp"
        android:layout_height="80dp">
        <TextView android:id="@+id/text1" android:textSize="15sp"
            android:textStyle="bold" android:textColor="@color/black"
            android:layout_width="fill_parent" android:layout_height="40dp" />

        <TextView android:id="@+id/text2" android:textSize="10sp"
            android:textColor="@color/black" android:layout_width="fill_parent"
            android:layout_height="20dp" />

        <TextView android:id="@+id/text3" android:textSize="15sp"
            android:ellipsize="end" android:textColor="@color/black"
            android:layout_width="fill_parent" android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
