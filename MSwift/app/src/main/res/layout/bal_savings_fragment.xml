<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">`

    <LinearLayout
        android:id="@+id/savingsCard"
        style="@style/BalancesavingsTheme"
        android:orientation="vertical">

        <TextView
            android:id="@+id/savingsText"
            style="@style/TextMediumTheme"
            android:text="@string/savingsTranstext" />

        <TextView
            android:id="@+id/accBal"
            style="@style/AccountBalanceTheme"
            android:layout_below="@+id/savingsText"
            android:text="@string/accountbalsavings"
            android:textColor="@color/savingsValue" />
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayoutVerticalTheme"
        android:orientation="horizontal"
        android:padding="@dimen/todoListItemMargin">

        <LinearLayout
            android:id="@+id/layForTransactionBegin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layForMoneyMargin"
            android:layout_marginTop="@dimen/todoListItemMargin"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtForDotStart"
                        style="@style/TextSmallTheme"
                        android:text="@string/balanceDateOfTransactionStart" />

                    <TextView
                        android:id="@+id/txtForDotStartSelected"
                        style="@style/TextMediumTheme"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layForMoneyMargin"
                        android:layout_marginTop="@dimen/layForMoneyMargin"
                        android:text="@string/placeHolderText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/weekly_calendar"
                        android:layout_gravity="right"
                        android:tint="@color/lineGrey" />

                </LinearLayout>

            </LinearLayout>


            <View style="@style/CommonLineTheme" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layForDob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layForMoneyMargin"
            android:layout_marginTop="@dimen/todoListItemMargin"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtForDotEnd"
                        style="@style/TextSmallTheme"
                        android:text="@string/balanceDateOfTransactionEnd" />

                    <TextView
                        android:id="@+id/txtForDotEndSelected"
                        style="@style/TextMediumTheme"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/layForMoneyMargin"
                        android:layout_marginTop="@dimen/layForMoneyMargin"
                        android:text="@string/placeHolderText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/weekly_calendar"
                        android:layout_gravity="right"
                        android:tint="@color/lineGrey" />

                </LinearLayout>

            </LinearLayout>
            <View style="@style/CommonLineTheme" />
        </LinearLayout>
    </LinearLayout>

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/transactionSavingsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        />
</LinearLayout>
