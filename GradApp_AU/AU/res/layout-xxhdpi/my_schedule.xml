<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hamberger_bg"
    >
    
    <RelativeLayout
        android:id="@+id/layoutForunivIconMenus"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="100dp"
        android:visibility="gone"
        >
        <include
            android:id="@+id/sideMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/univ_side_menu"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layoutForMyScheduleFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/commencement_bg"
        >
        <RelativeLayout
	        android:id="@+id/layoutForSwipe"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        />
        <include
            android:id="@+id/header"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			layout="@layout/header"
			/>
        <TextView
            android:id="@+id/textForMyScheduleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="90dp"
            android:layout_centerHorizontal="true"
            android:text="@string/mySchedule"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/textForMyScheduleEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_alignParentRight="true"
            android:text="@string/editSchedules"
            android:layout_marginRight="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textForMyScheduleHeader"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
                >
		        <LinearLayout
		            android:id="@+id/layoutForMySchedule"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:orientation="vertical"
		            />

		     <!--  <TextView
		            android:id="@+id/textForUserScheduleHeader"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:layout_marginTop="60dp"
		            android:text="@string/userSchedule"
		            android:textColor="@color/black"
		            android:textSize="20sp" />

		        <LinearLayout
		            android:id="@+id/layoutForUserSchedule"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:orientation="vertical"
		            />  -->
	        </LinearLayout>
        </ScrollView>
        <RelativeLayout
	        android:id="@+id/layoutForMaximizeClick"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:visibility="gone"
	        />
        <RelativeLayout
            android:id="@+id/layoutForOtherSchedules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/imageForAdd"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/add_icon_search"
                android:contentDescription="@string/contentdesc" 
                />
            <TextView
                android:id="@+id/textForAddOtherEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageForAdd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="@string/addOtherSchedules"
                />
        </RelativeLayout>
    </RelativeLayout>
    
</RelativeLayout>
