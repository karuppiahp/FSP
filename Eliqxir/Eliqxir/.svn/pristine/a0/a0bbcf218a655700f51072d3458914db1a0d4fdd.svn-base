<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color" >
    
    <include
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        layout="@layout/header" />
    <com.eliqxir.utils.CustomTextOpensansSemiBold
        android:id="@+id/textForDriverStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rio"
        android:textSize="22dp"
        android:textColor="@color/orange"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/header"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/textForDriverStoreMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rio"
        android:textSize="13dp"
        android:textColor="@color/txt_color_gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textForDriverStoreName"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/textForDriverStorePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rio"
        android:textSize="13dp"
        android:textColor="@color/txt_color_gray"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textForDriverStoreMail"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textForDriverStorePhone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_below="@+id/view"
        >
        <ImageButton
            android:id="@+id/imageBtnForCall"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/call_btn"
            />
        <ImageButton
            android:id="@+id/imageBtnForEmail"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/email_btn"
            />
    </LinearLayout>
    <ImageButton
        android:id="@+id/imageBtnForRemoveDriver"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:background="@drawable/remove_driver_btn"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>