<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color" >

    <include
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        layout="@layout/header" />

    <LinearLayout
        android:id="@+id/layoutForDriverBtns"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:background="#fbb03b" >

        <com.eliqxir.utils.CustomTextOpensansRegular
            android:id="@+id/textForDriverProcessing_DriverOrderScreen"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#fbb03b"
            android:gravity="center"
            android:text="PROCESSING"
            android:textColor="#FFFFFF" />

        <com.eliqxir.utils.CustomTextOpensansRegular
            android:id="@+id/textForDriverHistory_DriverOrderScreen"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="HISTORY"
            android:textColor="#fbb03b" />
    </LinearLayout>

    <ListView
        android:id="@+id/listForDriverHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutForDriverBtns"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/text_noorder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/nomoredriver"
        android:textColor="@color/txt_color_gray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"  />

</RelativeLayout>