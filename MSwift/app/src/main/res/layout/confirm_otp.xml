<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SignUpTheme">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/bottmMargin">

            <ImageView
                android:id="@+id/imgForLogo"
                style="@style/LogoTopWhite"
                android:layout_margin="@dimen/bottmMargin"
                />

            <TextView
                android:id="@+id/txtForOtpHeader"
                style="@style/HeaderTextGreyTheme"
                android:layout_below="@+id/imgForLogo"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/mediumMargin"
                android:text="@string/otpTxt" />

            <LinearLayout
                android:id="@+id/layForOTPTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtForOtpHeader"
                android:layout_marginLeft="@dimen/todoListItemMargin"
                android:layout_marginRight="@dimen/todoListItemMargin"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layForConfirmOtp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/todoListItemMargin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtForOtp"
                        style="@style/TextSmallRoseTheme"
                        android:text="@string/otpInputTxt" />

                    <TextView
                        android:id="@+id/txtForOtpCode"
                        style="@style/TextSmallTheme"
                        android:text="@string/otpCode"
                        android:layout_marginTop="@dimen/bottmMargin"/>

                    <EditText
                        android:id="@+id/editTxtForOtp"
                        style="@style/EditTextThemeWhite"
                        android:layout_marginTop="@dimen/commonMargin"
                        android:hint="@string/enterOtpCode"
                        android:textColorHint="@color/white"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:inputType="numberDecimal"/>
                </LinearLayout>

                <View style="@style/CommonLineTheme" />

            </LinearLayout>


            <Button
                android:id="@+id/btnForFinish"
                style="@style/OtpButtonTheme"
                android:layout_below="@+id/layForOTPTxt"
                android:text="@string/otpBttn"
                />

