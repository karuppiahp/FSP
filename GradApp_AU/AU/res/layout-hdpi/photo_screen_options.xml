<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".MainActivity" >

    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        layout="@layout/header" />

    <RelativeLayout
        android:id="@+id/imagedetailspicturename"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header" >

        <TextView
            android:id="@+id/textForPhotoName"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/photoName"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/editTextForPhotoName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/photoName"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cameraphoto"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layForPhotoBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".99"
            android:background="@color/redBg" >

            <ImageView
                android:id="@+id/photoBgTransparent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/contentdesc"
                android:src="@drawable/photo_options_transparent" />

            <ImageView
                android:id="@+id/picturebackimg"
                android:layout_width="fill_parent"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/contentdesc"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/textForPhotoBack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/picturebackimg"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/pictureOptionBack"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight=".01" />

        <RelativeLayout
            android:id="@+id/layForPhotoDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".99"
            android:background="@color/redBg" >

            <ImageView
                android:id="@+id/photoBgTransparentDelete"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/contentdesc"
                android:src="@drawable/photo_options_transparent" />

            <ImageView
                android:id="@+id/pictureDelete"
                android:layout_width="fill_parent"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/contentdesc"
                android:src="@drawable/delet" />

            <TextView
                android:id="@+id/textForPhotoDelete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pictureDelete"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/pictureOptionDelete"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight=".01" />

        <RelativeLayout
            android:id="@+id/layForPhotoShare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:background="@color/redBg" >

            <ImageView
                android:id="@+id/photoBgTransparentShare"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/contentdesc"
                android:src="@drawable/photo_options_transparent" />

            <ImageView
                android:id="@+id/pictureshare"
                android:layout_width="fill_parent"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/contentdesc"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/textForPhotoShare"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pictureshare"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/pictureOptionShare"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight=".01" />

        <RelativeLayout
            android:id="@+id/layForPhotoSave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".99"
            android:background="@color/redBg" >

            <ImageView
                android:id="@+id/photoBgTransparentSave"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:contentDescription="@string/contentdesc"
                android:src="@drawable/photo_options_transparent" />

            <ImageView
                android:id="@+id/picturesave"
                android:layout_width="fill_parent"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/contentdesc"
                android:src="@drawable/saveing" />

            <TextView
                android:id="@+id/textForPhotoSave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/picturesave"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/pictureOptionSave"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/cameraphoto"
        android:layout_below="@+id/imagedetailspicturename" >

        <FrameLayout
            android:id="@+id/frameForCapturedImages"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" >

            <com.gradapp.au.support.SquareImageView
                android:id="@+id/imageFromCapturing"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/contentdesc"
                android:scaleType="fitCenter"
                android:src="@drawable/image_01" />

            <ProgressBar
                android:id="@+id/progressBarForImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>