<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/articleheaderrelative"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/bluebg" >

        <TextView
            android:id="@+id/articleheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="ARTICLES"
            android:textColor="@color/white"
            android:textScaleX="1.2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/articlebackbtn"
            android:layout_width="28dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_games"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/articlerelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/articleheaderrelative"
        android:background="@color/white" >

        <!--
        <ImageView
            android:id="@+id/imag1"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img1" />

        <ImageView
            android:id="@+id/imag2"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/imag1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img2" />

        <ImageView
            android:id="@+id/imag3"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/imag2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img3" />

        <ImageView
            android:id="@+id/imag4"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/imag3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img4" />
        -->

        <ListView
            android:id="@+id/listForArticles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_margin="10dp" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/detailRelative"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/articleheaderrelative"
        android:visibility="gone" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:background="@color/white" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/layForImageAvailHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/layForImageAvail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/mainimage"
                            android:layout_width="fill_parent"
                            android:layout_height="160dp"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/triangle"
                            android:layout_width="fill_parent"
                            android:layout_height="130dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/triangle" />

                        <TextView
                            android:id="@+id/articletitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/triangle"
                            android:layout_marginLeft="140dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="53dp"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/articletitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/articletitle"
                            android:layout_below="@+id/articletitle"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/articletitleForNoImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/layForImageAvailHeader"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/dividerbarlist" />

                <RelativeLayout
                    android:id="@+id/laydesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1" >

                    <TextView
                        android:id="@+id/textdesc"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="#2c2d2f"
                        android:textSize="18sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/shareText"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/laydesc"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/sharebtn" />

                <ImageView
                    android:id="@+id/addimg"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/shareText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/googleadd" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/socialshareRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp" >

            <Button
                android:id="@+id/shareTextbtn"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sharetext" />

            <Button
                android:id="@+id/emailbtn"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/shareTextbtn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/emailbtn" />

            <Button
                android:id="@+id/facebookbtn"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/emailbtn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/facebookbtn" />

            <Button
                android:id="@+id/twitterbtn"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/facebookbtn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/twitterbtn" />

            <Button
                android:id="@+id/cancelbtn"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/twitterbtn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cancelbtn" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>