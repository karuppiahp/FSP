    <RelativeLayout
        android:id="@+id/bars_wv02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <WebView
            android:id="@+id/bars_content_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/socialdrinksspecial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000" 
        android:visibility="gone">
		
         <RelativeLayout       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        >
        
        <Button
                android:id="@+id/barshareText"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sharetext" />
     
        <Button
                android:id="@+id/baremailBtn"   
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/barshareText"
                android:background="@drawable/emailbtn" />
        
         <Button
                android:id="@+id/barfacebookBtn"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
