<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <RelativeLayout
        android:id="@+id/layMyScheduleAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/myScheduleImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calendar"
            android:contentDescription="@string/contentdesc"
            />
        <TextView
            android:id="@+id/txtForMySchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/myScheduleImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/mySchedule"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layCommencementAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/commencementImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/commencement_img"
            android:contentDescription="@string/contentdesc"
            />
        <TextView
            android:id="@+id/txtForCommenecementPrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/commencementImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/commencementPrg"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layNotificationsAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/notificationsImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/notifications_img"
            android:contentDescription="@string/contentdesc"
            />
        <TextView
            android:id="@+id/txtForNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notificationsImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/notifications"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/laySocialMediaAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/socialMediaImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/social_media_img"
            android:contentDescription="@string/contentdesc"
            />
        <TextView
            android:id="@+id/txtForSocialMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/socialMediaImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/socialmedia"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layCameraAnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <ImageView
            android:id="@+id/cameraImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/camera_img"
            android:contentDescription="@string/contentdesc"
            />
        <TextView
            android:id="@+id/txtForCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cameraImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/camera"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>

</LinearLayout>
