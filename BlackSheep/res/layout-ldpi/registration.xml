<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
         android:layout_height="fill_parent" >
    
    <ImageView
      android:id="@+id/imgview" 
      android:layout_width="200dp"
      android:layout_height="170dp"
      android:background="@drawable/logo"   
      android:layout_marginTop="50dp"
      android:layout_centerHorizontal="true" />
    
     <RelativeLayout
            android:id="@+id/school_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/imgview"
            android:background="@drawable/rectanglebg"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/school_icon"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/schoolicon"
                android:contentDescription="@string/icd" />
            
        <TextView
            android:id="@+id/school_value"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/school_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"  
            android:layout_marginTop="3dp"          
            android:background="@color/background"
            android:drawableRight="@drawable/downarrow"
            android:gravity="center_vertical"
           
            android:textScaleX="1.2"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp" />
        
        </RelativeLayout>
    
    <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/school_layout"
            android:background="@drawable/rectanglebg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="19dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mailicon"
                android:contentDescription="@string/icd" />

            <EditText
                android:id="@+id/email_value"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/email_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"      
                android:layout_marginTop="5dp"         
                android:gravity="center_vertical"
                android:background="@color/background"
                android:hint="@string/emailhint"
                android:padding="10dp"
                android:textScaleX="1.2"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

