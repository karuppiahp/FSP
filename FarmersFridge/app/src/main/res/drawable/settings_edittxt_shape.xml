<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="-0.50dp">
        <shape android:shape="rectangle">
            <corners
                android:radius="3dp" />
            <stroke
                android:width="1dp"
                android:color="@color/silver" />
            <solid
                android:color="#00FFFFFF" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>