<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_texture_full_page">

    <!--<include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative1">


        <TextView
            style="@style/HeaderTextTheme"
            android:id="@+id/Termstitle"
            android:text="@string/TermsHeader"/>
        <TextView
            style="@style/HeaderDescTheme"
            android:text="@string/TermsDesc"
            android:id="@+id/TermsDescText"
            android:layout_below="@id/Termstitle"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative1"
        android:id="@+id/relativeLayout2">
        <ImageView
            android:id="@+id/backbtn"
            android:background="@drawable/arrow_left_gray"
            style="@style/ArrowImageThemeLeft"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:onClick="backButton"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/backbtn">

            <TextView
                android:id="@+id/txtForTandC"
                style="@style/TextMediumTheme"
                android:layout_margin="10dp"
                android:layout_below="@+id/tool_bar"
                />

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>