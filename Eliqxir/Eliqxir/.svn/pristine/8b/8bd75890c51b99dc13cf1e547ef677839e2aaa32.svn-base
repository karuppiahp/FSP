<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_color" >
    
    <include
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        layout="@layout/header" />
    
    <com.eliqxir.utils.CustomTextOpensansSemiBold
        android:id="@+id/textforStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="Capital City Package"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/orange"
        />
    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/textforStoreAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:text="20 West Wabash Ave"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/txt_color_gray"
        />
    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/textforStoreAddress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:text="Suite 24"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/txt_color_gray"
        />
    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/textforStoreAddress3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:text="Chicago, IL 60540"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/txt_color_gray"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/edit_menu_txt"
        android:layout_marginTop="15dp"
        />
    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/textforStoreHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="@string/hours"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/orange"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monday"
                android:textSize="13dp"
                android:textColor="@color/edit_menu_txt"
                />
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForMondayField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="10am - 2am"
                android:textSize="13dp"
                android:textColor="@color/txt_color_gray"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tuesday"
                android:textSize="13dp"
                android:textColor="@color/edit_menu_txt"
                />
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForTuesdayField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="10am - 1am"
                android:textSize="13dp"
                android:textColor="@color/txt_color_gray"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wednesday"
                android:textSize="13dp"
                android:textColor="@color/edit_menu_txt"
                />
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForWednesdayField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="10am - 11pm"
                android:textSize="13dp"
                android:textColor="@color/txt_color_gray"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thursday"
                android:textSize="13dp"
                android:textColor="@color/edit_menu_txt"
                />
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForThursdayField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="10am - 2am"
                android:textSize="13dp"
                android:textColor="@color/txt_color_gray"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friday"
                android:textSize="13dp"
                android:textColor="@color/edit_menu_txt"
                />
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForFridayField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="10am - 2am"
                android:textSize="13dp"
                android:textColor="@color/txt_color_gray"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturday"
                android:textSize="13dp"
                android:textColor="@color/edit_menu_txt"
                />
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForSaturdayField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="10am - 2am"
                android:textSize="13dp"
                android:textColor="@color/txt_color_gray"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunday"
                android:textSize="13dp"
                android:textColor="@color/edit_menu_txt"
                />
            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForSundayField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="12pm - 2am"
                android:textSize="13dp"
                android:textColor="@color/txt_color_gray"
                />
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/edit_menu_txt"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <com.eliqxir.utils.CustomTextOpensansRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_closed"
            android:textSize="15dp"
            android:textColor="@color/txt_color_gray"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
	        android:id="@+id/imageForOpenClosed"
	        android:layout_width="40dp"
	        android:layout_height="25dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/available_on"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="8dp"
	        />
    </RelativeLayout> 
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/edit_menu_txt"
        />
    <com.eliqxir.utils.CustomTextOpensansRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/store_txt"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@color/edit_menu_txt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/edit_menu_txt"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        <com.eliqxir.utils.CustomTextOpensansRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deliveries"
            android:textSize="15dp"
            android:textColor="@color/txt_color_gray"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
	        android:id="@+id/imageForAcceptDelivers"
	        android:layout_width="40dp"
	        android:layout_height="25dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/available_on"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="8dp"
	        />
    </RelativeLayout> 
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/edit_menu_txt"
        />

</LinearLayout>