<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/textForDriverNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/txt_color_gray"
        android:textSize="17dp" />

    <com.eliqxir.utils.CustomTextOpensansRegular
        android:id="@+id/textForDriverLNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/textForDriverNames"
        android:textColor="@color/txt_color_gray"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/imageForArrow"
        android:layout_width="18dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/list_arrow" />

</RelativeLayout>