<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg_color" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            layout="@layout/header" />

        <LinearLayout
            android:id="@+id/layoutForName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_margin="20dp"
            android:background="@color/txt_color_gray"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTxtForFName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@color/app_bg_color"
                android:hint="@string/fname"
                android:paddingLeft="10dp"
                android:textColor="@color/txt_color_gray"
                android:textColorHint="@color/txt_color_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTxtForLName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@color/app_bg_color"
                android:hint="@string/lname"
                android:paddingLeft="10dp"
                android:textColor="@color/txt_color_gray"
                android:textColorHint="@color/txt_color_gray"
                android:textSize="14sp" />
        </LinearLayout>

        <com.eliqxir.utils.CustomTextOpensansSemiBold
            android:id="@+id/textForDOB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutForName"
            android:gravity="center"
            android:text="@string/dob"
            android:textColor="@color/txt_color_gray"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layoutForDOB"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/textForDOB"
            android:layout_margin="20dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
               >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" >

                    <Button
                        android:id="@+id/spineerForMonth"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                       android:layout_gravity="center"
                        android:background="@drawable/dob_back"
                        android:hint="@string/month_hint"                 
                       
                        android:textColor="@color/app_orange"
                        android:textColorHint="@color/app_orange"
                        android:paddingLeft="3dp"
                        android:paddingRight="10dp" />

                    
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" >

                    <Button
                        android:id="@+id/spineerForDate"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                       android:layout_gravity="center"
                        android:background="@drawable/dob_back"
                        android:hint="@string/date_hint"                 
                       
                        android:textColor="@color/app_orange"
                        android:textColorHint="@color/app_orange"
                        android:paddingLeft="3dp"
                        android:paddingRight="10dp" />

                   
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
               >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" >

                    <Button
                        android:id="@+id/spineerForYear"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="1dp"
                      android:layout_gravity="center"
                        android:background="@drawable/dob_back"
                        android:hint="@string/year_hint"                 
                       
                        android:textColor="@color/app_orange"
                        android:textColorHint="@color/app_orange"
                        android:paddingLeft="3dp"
                        android:paddingRight="10dp" />

                    
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutForEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutForDOB"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/txt_color_gray"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTxtForEmail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="1dp"
                android:background="@color/app_bg_color"
                android:editable="false"
                android:focusable="false"
                android:hint="@string/email"
                android:paddingLeft="10dp"
                android:textColor="@color/txt_color_gray"
                android:textColorHint="@color/txt_color_gray"
                android:textSize="14sp" />
        </LinearLayout>

         <LinearLayout
            android:id="@+id/lay_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutForEmail" >

            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/save" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/logout1" />
        </LinearLayout>

        <Button
            android:id="@+id/btnChangePwd"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/lay_buttons"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/change_password" />
    </RelativeLayout>

</ScrollView>