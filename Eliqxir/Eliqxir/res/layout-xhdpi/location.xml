<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60111111" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/app_bg_color" >

        <com.eliqxir.utils.CustomTextOpensansSemiBold
            android:id="@+id/textForLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="LOCATION"
            android:textColor="#fbb03b"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnclose1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_btn" />
        <Button
            android:id="@+id/btnclose2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@drawable/location_close_btn" />

        <RelativeLayout
            android:id="@+id/layoutForLocationCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textForLocation"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >

            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForLocation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="GPS tells us that you&apos;re near:"
                android:textColor="#939597" />

            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForLocation3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textForLocation2"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="GPS location"
                android:textColor="#53bc9d"
                android:textSize="15dp" />

            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForLocation4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textForLocation3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Is this where you would like your goods delivered? Or would you like to enter a custom location?"
                android:textColor="#939597" />

            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/textForLocation5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textForLocation4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="This determines what products show up for you to browse"
                android:textColor="#939597" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutForEditAndUseBtns"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/layoutForLocationCurrent"
            android:layout_marginTop="25dp"
            android:background="#e4e4e0" >

            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/btnForUseThis"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/app_bg_color"
                android:gravity="center"
                android:text="Use this"
                android:textColor="#d98807"
                android:textSize="18dp" />

            <com.eliqxir.utils.CustomTextOpensansRegular
                android:id="@+id/btnForEdit"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/app_bg_color"
                android:gravity="center"
                android:text="Edit"
                android:textColor="#d98807"
                android:textSize="18dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutForLocationFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textForLocation"
            android:visibility="gone"
            >
            <RelativeLayout
                android:id="@+id/locationFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#939597" >

                <EditText
                    android:id="@+id/editTxtField1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:paddingLeft="3dp"
                    android:background="@color/app_bg_color"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="15dp"
                    android:hint="@string/address" />

                <EditText
                    android:id="@+id/editTxtField2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/editTxtField1"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:background="@color/app_bg_color"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="15dp"
                    android:hint="@string/city" />
                <EditText
                    android:id="@+id/editTxtField3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/editTxtField2"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingLeft="3dp"
                    android:background="@color/app_bg_color"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="15dp"
                    android:hint="@string/state" />
                <EditText
                    android:id="@+id/editTxtField4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/editTxtField3"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:paddingLeft="3dp"
                    android:background="@color/app_bg_color"
                    android:textColor="@color/txt_color_gray"
                     android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textSize="15dp"
                    android:hint="@string/country" />

                <EditText
                    android:id="@+id/editTxtField5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/editTxtField4"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="3dp"
                    android:inputType="number"
                    android:digits="0123456789"
                       android:maxLength="5"
                    android:background="@color/app_bg_color"
                    android:textColor="@color/txt_color_gray"
                    android:textSize="15dp"
                    android:hint="Zipcode" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/editTxtField5"
                    android:background="#939597" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnForFindMe"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/locationFields"
                android:layout_margin="15dp"
                android:background="@drawable/btn_color_bg"
                android:text="FIND ME"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/btnForFindMe"
                android:layout_marginTop="25dp"
                android:background="#e4e4e0" >

                <com.eliqxir.utils.CustomTextOpensansRegular
                    android:id="@+id/btnForSave"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@color/app_bg_color"
                    android:gravity="center"
                    android:text="Save"
                    android:textColor="#d98807"
                    android:textSize="18dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>