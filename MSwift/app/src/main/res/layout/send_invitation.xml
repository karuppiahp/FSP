<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layForFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layForMoneyMargin"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTxtForFirstName"
                    style="@style/EditTextTheme"
                    android:layout_marginTop="@dimen/layForMoneyMargin"
                    android:hint="@string/ffirstname" />
            </android.support.design.widget.TextInputLayout>
            <View style="@style/CommonLineTheme" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layForLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layForMoneyMargin"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTxtForLastName"
                    style="@style/EditTextTheme"
                    android:layout_marginTop="@dimen/layForMoneyMargin"
                    android:hint="@string/flasttname" />
            </android.support.design.widget.TextInputLayout>

            <View style="@style/CommonLineTheme" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layForEmailAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/todoListItemMargin"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTxtForEmail"
                style="@style/EditTextTheme"
                android:layout_marginTop="@dimen/layForMoneyMargin"
                android:hint="@string/femail" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <View style="@style/CommonLineTheme" />

    <LinearLayout
        android:id="@+id/layForSendInviteBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/todoListItemMargin"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />


        <Button
            android:id="@+id/btnForSendInvite"
            style="@style/BtnSignup"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape"
            android:text="SAVE"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />
    </LinearLayout>

</LinearLayout>