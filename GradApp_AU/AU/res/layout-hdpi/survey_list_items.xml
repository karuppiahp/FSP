<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout
        android:id="@+id/layoutForSurveyItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/textForSurveyQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <ImageButton
            android:id="@+id/imageBtnForSurveyYes"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/textForSurveyQuestion"
            android:background="@drawable/yes_blue_btn"
            android:contentDescription="@string/contentdesc"
            />
        <ImageButton
            android:id="@+id/imageBtnForSurveyNo"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/textForSurveyQuestion"
            android:layout_toRightOf="@+id/imageBtnForSurveyYes"
            android:background="@drawable/no_blue_btn"
            android:contentDescription="@string/contentdesc"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/surveyView"
        android:layout_below="@+id/layoutForSurveyItems"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
