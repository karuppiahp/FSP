                android:text="DRINKS SPECIALS"
                android:textColor="@color/white"
                android:textScaleX="1.2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/drinksbackbtn"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_games" />
        </RelativeLayout>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bardetailsrelative"
            android:layout_above="@+id/btn_share_bar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/drinks_special_detail"
                    />
            </RelativeLayout>
        </ScrollView>

