<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/layForUserCustomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/imageForSheduleClock"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/contentdesc"
            android:src="@drawable/my_shedule_clock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/imageForSheduleClock"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textForUserScheduleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textForUserScheduleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/eventStartTime"
                android:textSize="17sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageForSheduleArrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/contentdesc"
            android:src="@drawable/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myScheduleView" />

</LinearLayout>
