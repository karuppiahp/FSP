<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/lay_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:background="@drawable/splashbg">
        
         <TextView
        android:id="@+id/settingsheadertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="75dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="16dp"        
         android:textScaleX="1.2" 
         android:text="SETTINGS" />
    
    
    <TextView 
            android:id="@+id/regsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"                     
            android:layout_marginRight="10dp"
            android:text="SAVE"    
            android:textScaleX="1.2"  
            android:textSize="16sp"        
            android:layout_marginTop="20dp"
            android:textColor="@color/white" 
            android:layout_alignParentRight="true"
        />

          <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/settingsheadertext"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="19dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/settingsmail"
                android:contentDescription="@string/icd" />

            <EditText
                android:id="@+id/email_value"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/email_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"      
                android:layout_marginTop="5dp"         
                android:gravity="center_vertical"
                android:background="@color/white"                
                android:padding="10dp"
                 android:textScaleX="1.2"
                android:textColor="@color/black"  
                android:textColorHint="@color/black"
                android:hint="@string/settingsemail"              
                android:textSize="14sp" />
        </RelativeLayout>
        
         <RelativeLayout
            android:id="@+id/dob_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/email_layout"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/dob_icon"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/settingsdob"
                android:contentDescription="@string/icd" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/dob_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp" 
            android:layout_marginRight="5dp"         
            android:background="@color/white"
            android:gravity="center_vertical"           
            android:padding="10dp"
            android:textColor="@color/black"     
            android:textColorHint="@color/black"
             android:textScaleX="1.2"
            android:hint="@string/settingsdob"          
            android:textSize="14sp" />
        </RelativeLayout>
        
         <TextView
            android:id="@+id/txt_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/dob_layout"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:text="@string/settingstext"
            android:textColor="@color/settingstextcolor"
            android:textSize="12sp"
             android:textScaleX="1.2"
            />
         
          <TextView
            android:id="@+id/school_value"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_school"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"  
            android:layout_marginTop="20dp"          
            android:background="@color/white"
            android:drawableRight="@drawable/settingsdownarrow"
            android:gravity="center_vertical"           
            android:padding="10dp"
            android:singleLine="true"
             android:textScaleX="1.2"
            android:textColor="@color/black"            
            android:textSize="14sp" />
          
