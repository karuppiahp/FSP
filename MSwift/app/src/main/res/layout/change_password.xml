<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout style="@style/HeaderTheme">

            <TextView
                style="@style/HeaderTextTheme"
                android:text="@string/changePswd" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layForPopUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/popUpBg">

                    <TextView
                        android:id="@+id/txtForChngPwdPopUp"
                        style="@style/TextMediumPopUpTheme"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/toggleHeight"
                        android:layout_marginLeft="@dimen/commonMargin"
                        android:layout_marginRight="@dimen/commonMargin"
                        android:layout_marginTop="@dimen/toggleHeight"
                        android:text="@string/popUpStep1" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/todoListItemMargin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layForOldPwd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/todoListItemMargin"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtForOldPwd"
                            style="@style/TextMediumBlueTheme"
                            android:text="@string/enterOldPwd" />

                        <EditText
                            android:id="@+id/editTxtForOldPwd"
                            style="@style/EditTextTheme"
                            android:layout_marginTop="@dimen/bottmMargin"
                            android:singleLine="true"
                            />

                    </LinearLayout>

                    <View style="@style/CommonLineTheme" />

                    <LinearLayout
                        android:id="@+id/layForNewPwd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/bottmMargin"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtForNewPwd"
                            style="@style/TextMediumBlueTheme"
                            android:text="@string/enterNewPwd" />

                        <EditText
                            android:id="@+id/editTxtForNewPwd"
                            style="@style/EditTextTheme"
                            android:layout_marginTop="@dimen/bottmMargin"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            />
                    </LinearLayout>

                    <View style="@style/CommonLineTheme" />

                    <LinearLayout
                        android:id="@+id/btnForsave"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mediumMargin"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />

                        <Button
                            android:id="@+id/btnForSave"
                            style="@style/BtnSignup"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape"
                            android:text="SAVE" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>