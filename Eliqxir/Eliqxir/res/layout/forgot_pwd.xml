<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:background="@drawable/promo_layout_bg" >

    <TextView
        android:id="@+id/forgot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Forgot password"
        android:textColor="@color/app_orange"
        android:textSize="16sp" />

    <Button
        android:id="@+id/pwd_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/login_close" />

    <EditText
        android:id="@+id/forgot_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/pwd_close"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_layout_bg"
        android:ems="10"
        android:hint="@string/email"
        android:paddingLeft="25dp"
        android:textColor="@color/txt_color_gray"
        android:textColorHint="@color/txt_color_gray"
        android:textSize="16sp" />

    

    

    <Button
        android:id="@+id/btnForgotPwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/forgot_username"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/app_orange"
        android:text="@string/submit"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    

</RelativeLayout>